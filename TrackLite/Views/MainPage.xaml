<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackLite.MainPage"
             BackgroundColor="#F2F2F2">

    <Grid>

        <WebView x:Name="MapWebView"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand" />

        <Grid x:Name="SemSinalView"
              BackgroundColor="#99000000"
              IsVisible="False"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">

            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="30"
                   WidthRequest="280"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                <StackLayout Spacing="15"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                    <Image Source="sem_sinal.png"
                           HeightRequest="80"
                           WidthRequest="80"
                           HorizontalOptions="Center" />

                    <Label Text="Sem sinal de GPS"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center"
                           TextColor="#214F4B" />

                    <Label Text="Aguardando sinal de localização..."
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Gray" />

                    <ActivityIndicator IsRunning="True"
                                       Color="#214F4B"
                                       WidthRequest="30"
                                       HeightRequest="30"
                                       HorizontalOptions="Center" />
                </StackLayout>

            </Frame>
        </Grid>

        <Border StrokeThickness="0"
                BackgroundColor="#FCFCFC"
                StrokeShape="RoundRectangle 20"
                Margin="20,0,20,20"
                VerticalOptions="End"
                HorizontalOptions="Fill">

            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.3"
                        Offset="0,4"
                        Radius="10"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto,Auto"
                  Padding="15"
                  RowSpacing="10">

                <StackLayout Grid.Row="0"
                             HorizontalOptions="Center"
                             Spacing="0">
                    <Label Text="Tempo"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#214F4B"
                           HorizontalOptions="Center"/>
                    <Label x:Name="TempoLabel"
                           Text="00:00:00"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </StackLayout>
                
                <StackLayout Grid.Row="1"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="160">

                    <StackLayout>
                        <Label Text="Distância"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label x:Name="DistanciaLabel"
                               Text="0 km"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Pace"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label x:Name="PaceLabel"
                               Text="0:00"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>

                <Grid Grid.Row="2" HorizontalOptions="Fill">
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Spacing="7">

                        <Button x:Name="DeleteButton"
                                BackgroundColor="#214F4B"
                                CornerRadius="20"
                                HeightRequest="50"
                                WidthRequest="50"
                                Clicked="DeletarRota_Clicked">
                            <Button.ImageSource>
                                <FileImageSource File="lixo.png"/>
                            </Button.ImageSource>
                        </Button>

                        <Button x:Name="PlayPauseButton"
                                BackgroundColor="#214F4B"
                                CornerRadius="20"
                                HeightRequest="55"
                                WidthRequest="55"
                                Clicked="PlayPauseButton_Clicked">
                            <Button.ImageSource>
                                <FileImageSource File="playy.png"/>
                            </Button.ImageSource>
                        </Button>

                        <Button x:Name="SaveButton"
                                BackgroundColor="#214F4B"
                                CornerRadius="20"
                                HeightRequest="50"
                                WidthRequest="50"
                                Clicked="SaveButton_Clicked">
                            <Button.ImageSource>
                                <FileImageSource File="salvar.png"/>
                            </Button.ImageSource>
                        </Button>
                    </StackLayout>

                    <Button x:Name="LocalButton"
                            HorizontalOptions="End"
                            Margin="0,0,10,0"
                            BackgroundColor="#214F4B"
                            CornerRadius="20"
                            HeightRequest="50"
                            WidthRequest="50"
                            Clicked="LocalButton_Clicked">
                        <Button.ImageSource>
                            <FileImageSource File="local.png"/>
                        </Button.ImageSource>
                    </Button>
                </Grid>

            </Grid>
        </Border>

    </Grid>
</ContentPage>