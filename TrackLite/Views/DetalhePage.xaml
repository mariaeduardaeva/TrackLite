<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="TrackLite.DetalhePage"
             BackgroundColor="#F2F2F2"
             Title="Detalhe da Atividade">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="download.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnExportClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*">
        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="20">

                <Label Text="{Binding DataFormatada}"
                       FontSize="16"
                       TextColor="#848484"
                       HorizontalOptions="Start"
                       Margin="0,-20,0,0" />

                <Grid ColumnSpacing="15" RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Frame CornerRadius="12" HasShadow="False" Padding="10" BorderColor="#FCFCFC">
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="clock.png" WidthRequest="20" HeightRequest="20" />
                            <Label Text="{Binding TempoFormatado}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black"
                                   Margin="5,0,0,0" />
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" CornerRadius="12" HasShadow="False" Padding="10" BorderColor="#FCFCFC">
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="distancia.png" WidthRequest="20" HeightRequest="20" />
                            <Label Text="{Binding DistanciaFormatada}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black"
                                   Margin="5,0,0,0" />
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" CornerRadius="12" HasShadow="False" Padding="10" BorderColor="#FCFCFC">
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="passos.png" WidthRequest="20" HeightRequest="20" />
                            <Label Text="{Binding PassosEstimados}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black"
                                   Margin="5,0,0,0" />
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1" CornerRadius="12" HasShadow="False" Padding="10" BorderColor="#FCFCFC">
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="ritmo.png" WidthRequest="25" HeightRequest="25" />
                            <Label Text="{Binding RitmoFormatado}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black"
                                   Margin="5,0,0,0" />
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <StackLayout>
                    <Label Text="Pace por Km"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           Margin="0,10,0,15"
                           HorizontalOptions="Center" />

                    <Frame x:Name="GraficoPaceContainer"
                           Padding="15"
                           BackgroundColor="White"
                           CornerRadius="12"
                           HasShadow="True"
                           HeightRequest="320">
                    </Frame>

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Spacing="20"
                                 Margin="0,15,0,0">
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <BoxView Color="#00C853" 
                                   WidthRequest="16" 
                                   HeightRequest="16"
                                   CornerRadius="8"/>
                            <Label Text="Mais rápido" 
                                   FontSize="11" 
                                   FontAttributes="Bold"
                                   VerticalTextAlignment="Center"
                                   TextColor="#424242"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <BoxView Color="#FF9800" 
                                   WidthRequest="16" 
                                   HeightRequest="16"
                                   CornerRadius="8"/>
                            <Label Text="Na média" 
                                   FontSize="11" 
                                   FontAttributes="Bold"
                                   VerticalTextAlignment="Center"
                                   TextColor="#424242"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <BoxView Color="#FF3D00" 
                                   WidthRequest="16" 
                                   HeightRequest="16"
                                   CornerRadius="8"/>
                            <Label Text="Mais lento" 
                                   FontSize="11" 
                                   FontAttributes="Bold"
                                   VerticalTextAlignment="Center"
                                   TextColor="#424242"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

                <Frame CornerRadius="12"
                       HasShadow="False"
                       Padding="0"
                       BackgroundColor="Gray">
                    <Grid HeightRequest="180">
                        <WebView x:Name="MapaCorridaWebView" />
                    </Grid>
                </Frame>

                <Frame CornerRadius="12" 
                       HasShadow="True" 
                       Padding="20" 
                       BackgroundColor="White"
                       BorderColor="#E0E0E0">
                    <StackLayout>
                        <Label Text="{Binding MensagemMotivacional}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" 
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding SubtituloMotivacional}"
                               FontSize="14"
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>