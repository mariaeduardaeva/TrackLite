<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="TrackLite.MainPage"
             BackgroundColor="#F2F2F2">

    <Grid>

        <!-- Mapa -->
        <mapsui:MapControl x:Name="mapView"
                           Margin="12,27"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"
                           />

        <!-- Frame branco -->
        <Border StrokeThickness="0"
                BackgroundColor="#FCFCFC"
                StrokeShape="RoundRectangle 20"
                Margin="20, 35"
                VerticalOptions="End"
                HorizontalOptions="Fill">

            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.3"
                        Offset="0,4"
                        Radius="10"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto" Padding="15" RowSpacing="10">

                <!-- Tempo -->
                <StackLayout Grid.Row="0"
                             HorizontalOptions="Center"
                             Spacing="0">
                    <Label Text="Tempo"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#214F4B"
                           HorizontalOptions="Center"/>
                    <Label Text="03h 10m"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </StackLayout>

                <!-- Distancia e pace -->
                <StackLayout Grid.Row="1"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="160">

                    <StackLayout>
                        <Label Text="DistÃ¢ncia"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label Text="10km"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Pace"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label Text="5:03"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>

            </Grid>
        </Border>

        <!-- Botoes -->
        <Grid ColumnDefinitions="*,*,*"
              HorizontalOptions="Center"
              VerticalOptions="End"
              Margin="0,0,0,0"
              ColumnSpacing="7">

            <Button BackgroundColor="#214F4B"
                    CornerRadius="20"
                    HeightRequest="50"
                    WidthRequest="50">
                <Button.ImageSource>
                    <FileImageSource File="lixo.png"/>
                </Button.ImageSource>
            </Button>

            <Button Grid.Column="1"
                    BackgroundColor="#214F4B"
                    CornerRadius="20"
                    HeightRequest="55"
                    WidthRequest="55"
                    TranslationY="-5">
                <Button.ImageSource>
                    <FileImageSource File="playy.png"/>
                </Button.ImageSource>
            </Button>

            <Button Grid.Column="2"
                    BackgroundColor="#214F4B"
                    CornerRadius="20"
                    HeightRequest="50"
                    WidthRequest="50">
                <Button.ImageSource>
                    <FileImageSource File="salvar.png"/>
                </Button.ImageSource>
            </Button>
        </Grid>

    </Grid>
</ContentPage>