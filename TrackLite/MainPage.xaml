<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="TrackLite.MainPage"
             BackgroundColor="#F2F2F2">

    <Grid>

        <!-- Mapa -->
        <mapsui:MapControl x:Name="mapView"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"/>

        <!-- Frame branco com informações e botões -->
        <Border StrokeThickness="0"
                BackgroundColor="#FCFCFC"
                StrokeShape="RoundRectangle 20"
                Margin="20,0,20,20"
                VerticalOptions="End"
                HorizontalOptions="Fill">

            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.3"
                        Offset="0,4"
                        Radius="10"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto,Auto" Padding="15" RowSpacing="10">

                <!-- Tempo -->
                <StackLayout Grid.Row="0"
                             HorizontalOptions="Center"
                             Spacing="0">
                    <Label Text="Tempo"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#214F4B"
                           HorizontalOptions="Center"/>
                    <Label x:Name="TempoLabel"
                           Text="00:00:00"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </StackLayout>

                <!-- Distância e pace -->
                <StackLayout Grid.Row="1"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="160">

                    <StackLayout>
                        <Label Text="Distância"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label x:Name="DistanciaLabel"
                               Text="0 km"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Pace"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label x:Name="PaceLabel"
                               Text="0:00"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>

                <!-- Botões -->
                <Grid Grid.Row="2" ColumnDefinitions="*,*,*"
                      HorizontalOptions="Center"
                      ColumnSpacing="7">

                    <!-- Deletar Rota -->
                    <Button x:Name="DeleteButton"
                            BackgroundColor="#214F4B"
                            CornerRadius="20"
                            HeightRequest="50"
                            WidthRequest="50"
                            Clicked="DeletarRota_Clicked">
                        <Button.ImageSource>
                            <FileImageSource File="lixo.png"/>
                        </Button.ImageSource>
                    </Button>

                    <!-- Iniciar / Pausar -->
                    <Button x:Name="PlayPauseButton"
                            Grid.Column="1"
                            BackgroundColor="#214F4B"
                            CornerRadius="20"
                            HeightRequest="55"
                            WidthRequest="55"
                            Clicked="PlayPauseButton_Clicked">
                        <Button.ImageSource>
                            <FileImageSource File="playy.png"/>
                        </Button.ImageSource>
                    </Button>

                    <!-- Salvar -->
                    <Button x:Name="SaveButton"
                            Grid.Column="2"
                            BackgroundColor="#214F4B"
                            CornerRadius="20"
                            HeightRequest="50"
                            WidthRequest="50"
                            Clicked="SaveButton_Clicked">
                        <Button.ImageSource>
                            <FileImageSource File="salvar.png"/>
                        </Button.ImageSource>
                    </Button>

                </Grid>

            </Grid>
        </Border>

    </Grid>
</ContentPage>