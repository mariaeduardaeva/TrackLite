<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackLite.MainPage"
             BackgroundColor="#f8f4f4">

    <Grid>

        <!-- PLACEHOLDER MAPA -->
        <Frame CornerRadius="25" 
               HasShadow="False" 
               Padding="0" 
               BackgroundColor="GREY" 
               Margin="12">
            <Label Text="Mapa aqui" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   TextColor="BLACK" 
                   FontAttributes="Bold"/>
        </Frame>

        <!-- FRAME BRANCO -->
        <Frame BackgroundColor="#FCFCFC"
               CornerRadius="20"
               Padding="15"
               Margin="20"
               VerticalOptions="End"
               HorizontalOptions="Fill"
               HasShadow="True"
               ZIndex="1">

            <Grid RowDefinitions="Auto,Auto" RowSpacing="10">

                <!-- TEMPO -->
                <StackLayout Grid.Row="0"
                             HorizontalOptions="Center"
                             Spacing="0">
                    <Label Text="Tempo"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#214F4B"
                           HorizontalOptions="Center"/>
                    <Label Text="03h 10m"
                           FontAttributes="Bold"
                           FontSize="24"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </StackLayout>

                <!-- DISTÂNCIA E PACE -->
                <StackLayout Grid.Row="1"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="100">

                    <StackLayout>
                        <Label Text="Distância"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label Text="10km"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Pace"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#214F4B"
                               HorizontalOptions="Center"/>
                        <Label Text="5:03"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>

            </Grid>
        </Frame>

        <!-- BOTÕES -->
        <Grid ColumnDefinitions="*,*,*"
              HorizontalOptions="Center"
              VerticalOptions="End"
              Margin="0,0,0,5"
              ZIndex="2">
            <!-- ZIndex maior que o Frame -->

            <Button BackgroundColor="#214F4B"
                    CornerRadius="20"
                    HeightRequest="55"
                    WidthRequest="55">
                <Button.ImageSource>
                    <FileImageSource File="lixo.png"/>
                </Button.ImageSource>
            </Button>

            <Button Grid.Column="1"
                    BackgroundColor="#214F4B"
                    CornerRadius="20"
                    HeightRequest="60"
                    WidthRequest="60"
                    TranslationY="-5">
                <Button.ImageSource>
                    <FileImageSource File="playy.png"/>
                </Button.ImageSource>
            </Button>

            <Button Grid.Column="2"
                    BackgroundColor="#214F4B"
                    CornerRadius="20"
                    HeightRequest="55"
                    WidthRequest="55">
                <Button.ImageSource>
                    <FileImageSource File="salvar.png"/>
                </Button.ImageSource>
            </Button>
        </Grid>

    </Grid>
</ContentPage>
