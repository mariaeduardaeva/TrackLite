<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:TrackLite"
       x:Class="TrackLite.AppShell"
       Shell.TabBarBackgroundColor="#214F4B"
       Shell.TabBarForegroundColor="#FCFCFC"
       Shell.TabBarUnselectedColor="#FCFCFC"
       Shell.TabBarTitleColor="#FCFCFC">

    <!-- NAVEGAÇÃO -->
    <TabBar >
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Histórico" Icon="historia.png">
            <ShellContent ContentTemplate="{DataTemplate local:HistoricoPage}" />
        </Tab>

        <Tab Title="Mais" Icon="menu.png">
            <ShellContent ContentTemplate="{DataTemplate local:ConfigPage}" />
        </Tab>
    </TabBar>

</Shell>