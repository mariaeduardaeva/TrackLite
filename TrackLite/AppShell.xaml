<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:TrackLite"
       x:Class="TrackLite.AppShell"
       Shell.TabBarBackgroundColor="#214F4B"
       Shell.TabBarForegroundColor="#FCFCFC"
       Shell.TabBarUnselectedColor="#FCFCFC"
       Shell.TabBarTitleColor="#FCFCFC"
       Shell.BackgroundColor="#F2F2F2"
       Shell.TitleColor="Black"
       Shell.ForegroundColor="Black"
       Shell.NavBarHasShadow="False">

    <!-- Navegacao -->
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

